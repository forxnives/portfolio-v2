---
import { Media } from "accessible-astro-components"

const { imgSrc, reverseImg = false } = Astro.props
---

<div class="grid grid-cols-1 gap-24 md:grid-cols-2">
	{
		!reverseImg ? (
			<div class="flex h-full items-center justify-center md:order-last">
				<Media
					class="flex items-center justify-center rounded-lg "
					src={imgSrc}
				/>
			</div>
		) : (
			""
		)
	}
	<div
		class=`space-content ${reverseImg ? "order-last": ""}  flex flex-col justify-center`
	>
		<slot />
	</div>
	{
		reverseImg ? (
			<div class="flex h-full items-center justify-center">
				<Media class="rounded-lg" src={imgSrc} />
			</div>
		) : (
			""
		)
	}
</div>
